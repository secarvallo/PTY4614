{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/index.ts",
    "src/routes/**/*.ts",
    "src/controllers/auth.controller.v2.ts",
    "src/core/**/*.ts",
    "src/scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/tests"
  ]
}
