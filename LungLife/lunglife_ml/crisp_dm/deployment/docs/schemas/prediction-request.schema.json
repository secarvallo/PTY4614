{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://lunglife.cl/schemas/prediction-request.json",
  "title": "PredictionRequest",
  "description": "Datos enviados desde el frontend para solicitar una predicción",
  "type": "object",
  "required": [
    "patientId",
    "clinicalData"
  ],
  "properties": {
    "patientId": {
      "type": "string",
      "format": "uuid",
      "description": "ID único del paciente"
    },
    "clinicalData": {
      "type": "object",
      "required": [
        "age",
        "gender",
        "smokingStatus"
      ],
      "properties": {
        "age": {
          "type": "integer",
          "minimum": 18,
          "maximum": 120
        },
        "gender": {
          "type": "string",
          "enum": [
            "M",
            "F"
          ]
        },
        "smokingStatus": {
          "type": "string",
          "enum": [
            "Never",
            "Current",
            "Former"
          ]
        },
        "cigarettesPerDay": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "yearsSmoking": {
          "type": "integer",
          "minimum": 0
        },
        "yearsQuit": {
          "type": "integer",
          "minimum": 0
        },
        "familyHistory": {
          "type": "boolean"
        },
        "chronicDisease": {
          "type": "string"
        },
        "exposure": {
          "type": "string",
          "enum": [
            "Yes",
            "No"
          ]
        },
        "symptoms": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "region": {
          "type": "string"
        }
      }
    },
    "requestMetadata": {
      "type": "object",
      "properties": {
        "requestedBy": {
          "type": "string",
          "format": "uuid"
        },
        "priority": {
          "type": "string",
          "enum": [
            "normal",
            "urgent"
          ]
        },
        "notes": {
          "type": "string",
          "maxLength": 500
        }
      }
    }
  }
}